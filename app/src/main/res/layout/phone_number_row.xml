<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"

    android:id="@+id/phone_number_row"
    >

    <TableLayout xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/phone_number_row_table_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        tools:context=".MyNotificationsListActivity">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/row_background_selector"
            android:minHeight="50dp"
            android:padding="1dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/employee_full_name"
                android:layout_width="152dp"
                android:layout_height="52dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="Joanna Zawadzka"
                android:textColor="@drawable/row_text_selector"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:padding="1dp"
                android:text="TextView"
                android:textColor="@drawable/row_text_selector"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/pn_call_icon"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="false"
                android:contentDescription="@string/call"
                android:cropToPadding="false"
                app:srcCompat="@drawable/icons_call_green" />
        </TableRow>
    </TableLayout>
</LinearLayout>